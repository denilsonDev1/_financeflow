
datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}
generator client {
    provider = "prisma-client-js"
}
model User{
    id String @id
    email String @unique
    password String
    name String
    surname String
    phone String @unique
    cpf String @unique
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

enum InstitutionType {
	BANK
	INVESTMENT_BROKER 
	FINTECH 
	OTHER 
}
model Instituition {
    id String @id
    name String @unique
    shoortName String
    type InstitutionType
    logoUrl String?
    primaryColor String?
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
}

